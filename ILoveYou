<script>
// Floating hearts
function heart(){
    const h=document.createElement("div");
    h.className="heart";
    h.innerHTML="â¤ï¸";
    h.style.left=Math.random()*window.innerWidth+"px";
    h.style.fontSize=(Math.random()*20+15)+"px";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),5000);
}
setInterval(heart,350);

// Fireworks
const canvas=document.getElementById("fireworks");
const ctx=canvas.getContext("2d");

function resize(){
    canvas.width=window.innerWidth;
    canvas.height=window.innerHeight;
}
resize();

let particles=[];

function burst(x,y){
    for(let i=0;i<70;i++){
        particles.push({
            x,y,
            speed:Math.random()*6+2,
            angle:Math.random()*Math.PI*2,
            life:100
        });
    }
}

function animate(){
    ctx.clearRect(0,0,canvas.width,canvas.height);
    particles.forEach((p,i)=>{
        p.x+=Math.cos(p.angle)*p.speed;
        p.y+=Math.sin(p.angle)*p.speed;
        p.life--;

        ctx.fillStyle="gold";
        ctx.beginPath();
        ctx.arc(p.x,p.y,2,0,Math.PI*2);
        ctx.fill();

        if(p.life<=0) particles.splice(i,1);
    });
    requestAnimationFrame(animate);
}
animate();

// Typing effect text
const message = `So here we goâ€¦ finally we are going on a date and I am planning it for us.
Candle light â€” yes it is candle light and a well planned one, with few more surprises ahead.

I am going to make up as loud as the hurt I have caused you, because you mean everything to me.

I love you KRISHNA GOHIL.
I will take care of you and us throughout life.

Thank you for saying yesssssssssssssssssssssssssssssssss â¤ï¸

I am yours forever â€”
Shukri, Tu Meri, Mein Tera, jaane saara Hindustan ğŸ’•`;

let charIndex=0;

function typeText(){
    const box=document.getElementById("typedMessage");
    if(charIndex < message.length){
        box.innerHTML += message.charAt(charIndex).replace("\n","<br>");
        charIndex++;
        setTimeout(typeText,35);
    }
}

// YES click
document.getElementById("yesBtn").onclick=()=>{
    document.getElementById("celebrate").style.display="block";
    document.getElementById("dinnerScene").style.display="block";
    document.getElementById("typedMessage").style.display="block";

    for(let i=0;i<6;i++){
        burst(Math.random()*canvas.width,Math.random()*canvas.height/2);
    }

    typeText();
};

// Sparkle effect
function sparkle(x,y){
    const s=document.createElement("div");
    s.className="sparkle";
    s.innerHTML="âœ¨";
    s.style.left=x+"px";
    s.style.top=y+"px";
    document.body.appendChild(s);
    setTimeout(()=>s.remove(),1000);
}

// NO floating + cute + sound
